<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learnshala.connect4.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
        <Pane fx:id="insertedDiscsPane" layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <VBox style="-fx-background-color: #2b3b4c;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
            <TextField fx:id="playerOneName" prefHeight="25.0" prefWidth="154.0" promptText="Player One Name" />
            <TextField fx:id="playerTwoName" layoutX="10.0" layoutY="10.0" prefHeight="25.0" prefWidth="152.0" promptText="Player Two Name" />
            <Button fx:id="setNameBtn" mnemonicParsing="false" prefHeight="31.0" prefWidth="179.0" text="Set Names">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Button>
                <Region prefHeight="106.0" prefWidth="200.0" />
                <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="32.0" prefWidth="173.0" text="Player One" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="179.0" text="Turn" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            <Region layoutX="10.0" layoutY="163.0" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
    </children>
</GridPane>
